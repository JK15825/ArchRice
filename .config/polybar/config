[module/powermenu]
type = custom/menu

format-padding = 5

label-open = " PWR"
label-close = " CLS "

menu-0-0 = " Lock "
menu-0-0-foreground = #fba922
menu-0-0-exec = "~/.config/polybar/lock.sh"
menu-0-1 = " Suspend "
menu-0-1-foreground = #fba922
menu-0-1-exec = "~/.config/polybar/locksusp.sh"
menu-0-2 = " Reboot "
menu-0-2-foreground = #fba922
menu-0-2-exec = systemctl reboot
menu-0-3 = " Power off"
menu-0-3-foreground = #fba922
menu-0-3-exec = systemctl poweroff


screenchange-reload = true
 
